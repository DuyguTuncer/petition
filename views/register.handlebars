                    <label> Email address <input type="email" name="emailAddress" id="inputfield">  </label>
                    <label> Password <input type="password" name="password" id="inputfield"> </label>
                    <button id="submit-signup" type="submit">Sign Up</button>
    </form>
<br>
    <div>
         <h3> If you are already a member, please <a href="/login">log in</a></h3>
    </div>
        <br>
         {{>errorInInput incompleteInfo=showErrorMessage}}
